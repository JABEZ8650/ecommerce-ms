                "order_id",
                "status",
                "user_id"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "order_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "paid",
                        "pending",
                        "failed"
                    ]
                },
                "user_id": {
                    "type": "string"
                }
            }
        },
        "domain.Payment": {
            "type": "object",
            "required": [
                "amount",
                "order_id",
                "status",
                "user_id"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "created_at": {
                    "type": "integer"
                },
                "id": {
                    "type": "string"
                },
                "order_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "paid",
                        "pending",
                        "failed"
                    ]
                },
                "updated_at": {
                    "type": "integer"
                },
                "user_id": {
                    "type": "string"
                }
            }
        },
        "domain.UpdatePaymentRequest": {
            "type": "object",
            "required": [
                "amount",
                "status"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "paid",
                        "pending",
                        "failed"
                    ]
                }
            }
